# Environment Configuration Template
# Copy this file to .env.local for development or .env.prod for production

# Database Configuration
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=your-db-host.com
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_DB_TEST=your_test_database_name

# Application Configuration
APP_PORT=8000
APP_COMMAND=uvicorn app.main:app --host 0.0.0.0 --port 8000

# Database URLs
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL_ASYNC=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

TEST_DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB_TEST}
TEST_DATABASE_URL_ASYNC=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB_TEST}

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Security
SECRET_KEY=your-secret-key-here
DEV_EDITOR_KEY=your-dev-editor-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Google Cloud Storage (optional for development)
GCS_BUCKET_NAME=your-bucket-name
HELPCENTER_GCS=your-gcs-secret-name

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600